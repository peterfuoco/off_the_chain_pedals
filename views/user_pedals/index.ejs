<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body>
        <h1>User Pedal Board </h1>
  
<nav class="navbar navbar-dark bg-dark">
  <a href="/pedals/new"><button class= 'btn btn-primary'>Add a Pedal</button></a> <p>'  '</p> 
  <a href="/pro_pedals/"><button class= 'btn btn-primary'>See Pro Pedal Boards</button></a>

</nav>
        <div class= "pedalBoard">
            
                <% pedals.forEach((pedal, id) => { %>
                    <div class='card'>
                    <h2> <a href="/pedals/<%=pedal._id%>"> <%= pedal.Name %> </a>  </h2>
                    <h2> <%= pedal.Price %> </h2> 
                    <h2>  <%= pedal.Analog %> </h2>
                    <a href="/pedals/<%=id%>"> <%= pedals.Name %></a>
                    <form action="/pedals/<%=pedal._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-danger"> Delete Pedal</button>
                    </form>
                </div>
                <% }) %>
        </div>
</body>
</html>



